<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="hybris.commands.category"
            id="hybris.commands.fixClasspath"
            name="Fix .classpath files">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="hybris.menus.hybrisMenu"
               label="Hybris"
               mnemonic="Y">
            <command
                  commandId="hybris.commands.fixClasspath"
                  id="hybris.menus.fixClasspath"
                  mnemonic="F">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="hybris.toolbars.hybrisToolbar">
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <category
            id="hybris.importWizards.сategory"
            name="Hybris">
      </category>
      <wizard
            category="hybris.importWizards.сategory"
            class="hybris.handlers.ImportPlatformWizard"
            icon="icons/sample.gif"
            id="hybris.importWizards.ImportHybrisWizard"
            name="Import hybris platform">
         <description>
            Import a file from the local file system into the workspace.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="hybris.handlers.ClasspathFixerHandler"
            commandId="hybris.commands.fixClasspath">
      </handler>
      <handler
            class="hybris.handlers.AntAllHandler"
            commandId="hybris.commands.antAll">
      </handler>
      <handler
            class="hybris.handlers.DisableAllBuilder"
            commandId="hybris.commands.disableAntBuilder">
      </handler>
   </extension>

</plugin>
